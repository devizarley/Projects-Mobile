<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WhatsApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        //Item utilizado para modificar as cores do "Not night"
        <item name="android:textColorTertiary">@color/black</item>

        
        <item name="color">#ffffff</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.NoActionBar" />

    <style name="Theme.WhatsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    //tema claro chat
    <style name="icons">
        <item name="android:tint">@color/colorIconsDarkMode</item>
    </style>

    <style name="fab_submit">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="container_inputText">
        <item name="android:background">@drawable/bottom_field_msg</item>
    </style>
    <style name="background_chat">
        <item name="android:background">@drawable/bg_chat</item>
    </style>

    <style name="Theme.WhatsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.WhatsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>